<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/editTextNomeIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#001219"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextPrecoIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#001219"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextQuantidadeIngrediente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#001219"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/editTextQuantidadeIngredienteUtilizado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/open_sans_light"
        android:textColor="#001219"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Adicione mais TextViews ou elementos de layout conforme necessÃ¡rio para exibir outros dados da receita. -->
</LinearLayout>
